{
  "name": "wojciech/time-provider",
  "type": "library",
  "description": "An injectable time provider",
  "keywords": ["time", "date", "dependency injection"],
  "homepage": "https://github.com/wojciech-z/php-time-provider",
  "license": "MIT",
  "authors": [
    {
      "name": "Wojciech Zabawa",
      "email": "wojciech@zabawa.org",
      "homepage": "https://zabawa.org",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^5.5|^7"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0.0"
  },
  "autoload": {
    "psr-4": {
      "Wojciech\\TimeProvider\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wojciech\\TimeProvider\\Test\\": "tests"
    }
  },
  "support": {
    "issues": "https://github.com/wojciech-z/php-time-provider/issues",
    "source": "https://github.com/wojciech-z/php-time-provider"
  },
  "scripts": {
    "phpunit": "phpunit --verbose --colors=always",
    "tests": [
      "@phpunit"
    ]
  }
}
